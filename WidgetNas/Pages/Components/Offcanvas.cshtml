        <button class="secondary w-200r" onclick="WN('offcanvas_top_ltr').wn.show()"><span class="fa fa-arrow-up"></span></button>
        <button class="secondary w-200r" onclick="WN('offcanvas_bottom_ltr').wn.show()"><span class="fa fa-arrow-down"></span></button>

        <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvas_start_ltr" wn-type="modal">
            <div class="offcanvas-header">
