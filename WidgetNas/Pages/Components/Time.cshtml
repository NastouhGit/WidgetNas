    </div>
    <div class="rtl">
        <h3>RTL</h3>
        <input id="date2_d_rtl" type="text" style="width:17rem" />
        <input id="date2_rtl" type="text" style="width:17rem" disabled />
        <div wn-type="Time"
             class="time" style="width:17rem"
             calendar="WNPersianCalendar" cultureinfo="WNCultureInfo_fa_IR"
             value-id="date2_rtl"
             display-id="date2_d_rtl"></div>
    </div>
