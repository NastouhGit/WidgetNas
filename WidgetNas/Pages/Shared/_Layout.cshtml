    <script>
        let fig = document.querySelectorAll("code[data-on]");
        fig.forEach((f) => {
            let html = '';
            if (f.getAttribute('data-on') !== '_code') {
                html = document.getElementById(f.getAttribute('data-on')).outerHTML;
                let l = html.split('\n');
                let space = l[l.length - 1].substring(0, l[l.length - 1].indexOf('<'));
                for (var i = 0; i < l.length; i++)
                    l[i] = l[i].replace(space, '');
                html = l.join('\n');
            }
            else {
                html = f.innerHTML;
                f.innerHTML = '';
            }
            let datamode = "text/html";
            if (f.hasAttribute('data-mode'))
                datamode = f.getAttribute('data-mode');

            var editor = CodeMirror(f, {
                mode: datamode,
                value: html,
                lineWrapping: true,
                lineNumbers: true,
                readOnly: true,
                matchBrackets: true,
            });

        });
    </script>

