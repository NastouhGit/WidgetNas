        </ig>
    </div>
    <div class="rtl">
        <h3>RTL</h3>
        <ig>
            <input value="ورودی فقط خواندنی" readonly>
        </ig>
        <ig readonly>
            <input value="گروه ورودی فقط خواندنی">
